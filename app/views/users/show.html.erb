        <% end %>
      </div>
      <%if @user.projects.any? %>
        <% @user.projects.each do |project| %>
          <%= render partial: 'projects/project', locals: {project: project} %>

        <%end %>
      <%else %>

      <%end %>
    </div>
  </div>


